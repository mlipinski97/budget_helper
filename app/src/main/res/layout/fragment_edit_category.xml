<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundImage"
    android:gravity="top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_category_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category_name_prompt"
            android:textColor="?attr/textColor" />

        <EditText
            android:id="@+id/edit_category_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_category_name_text_view"
            android:inputType="textCapSentences"
            android:textColor="?attr/textColor"
            android:textColorHint="?attr/hintTextColor"/>

        <TextView
            android:id="@+id/edit_category_icon_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category_icon_prompt"
            android:layout_below="@id/edit_category_name_edit_text"
            android:textColor="?attr/textColor" />

        <ImageView
            android:id="@+id/edit_category_icon_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_category_icon_text_view"
            android:src="@drawable/question_mark"
            android:contentDescription="ICON" />

        <Button
            android:id="@+id/edit_category_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_category_icon_image_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:backgroundTint="?attr/buttonColor"
            android:text="@string/category_cancel_button"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/edit_category_button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_category_icon_image_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="?attr/buttonColor"
            android:text="@string/category_edit_button"
            android:textColor="?attr/textColor" />
    </RelativeLayout>
</ScrollView>